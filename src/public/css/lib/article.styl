
$layoutWidth = 825px
#content
  .said-content
    >.context
      width $layoutWidth
      margin 0 auto
      // 文章标题
      .title
        margin 0
        font-weight 300
        line-height 1.2
        padding 0 0 1rem 0
        margin 0 0 1rem 0
        font-size 2.1rem
        border-bottom 1px dashed #CCC
        color #666
      // 文章内容
      .article
        // 提示（提示文章很久没更新）
        .notice
          position relative
          padding .75rem 1.25rem
          margin-bottom 1rem
          border 1px solid transparent
          border-radius .25rem
          &.warning
            color #856404
            background-color #fff3cd
            border-color #ffeeba
        .html
          html()
          // padding-bottom 2rem
        .author
          // border-top 1px solid #eee
          padding-top 3rem
          font-size 1.142rem
          p
            margin 0 0 .5rem 0
          a
            &:visited
              color #4078c0
      // 点赞
      .more
        // 点赞
        .other
          padding 4rem 0
          text-align center
          .like
            padding 1rem 1.2rem
            border-radius 6px
            font-size 1.185rem // 18px
            span
              &:first-child
                position relative
                padding-right .5rem
                // border-right 1px solid #fafafa
                &:after
                  position absolute
                  content '|'
                  right -.5rem
                  display inline
                  color rgba(255,255,255,0.2)
              &:last-child
                padding-left 1rem
      // 协议、浏览量和时间
      .article-other-info
          position relative
          // 阅读协议
          .cc
            position relative
            top 0
            float left
            img
              display block
          right()
            position relative
            top .3rem
            float right
          // 浏览量
          .browse
            right()
          // 更新时间
          time
            right()
            margin-left 1rem
            line-height 1.2
            background #999
            border-radius 1.285rem // 18px
            color #fff
            font-size .928rem // 13px
            padding .2rem .85rem
          &::after
            content ''
            display block
            clear both
// 查看大图
.app-image-view
  position fixed
  width 100%
  height 100%
  z-index 6
  top 0
  bottom 0
  left 0
  right 0
  cursor zoom-out
  overflow auto
  // 防止出横向滚动条
  overflow-x hidden
  .bg
    position fixed
    z-index 1
    height 100%
    width 100%
    top 0
    left 0
    background #fff
    opacity .4
  img
    position absolute
    display block
    z-index 2
    display block