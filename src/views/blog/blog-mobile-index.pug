extends ../partials/layout-mobile.pug

block content
  .banner
    section.banner-bg(style='background-image:url(//static.tasaid.com/images/bg/blog-banner-bg.e7efded1.jpg)')
    .content
      h2 blog
      p (46840404742).toString(36)
  .content
    .module-title
      span 沉淀
    .lists.view-blog
      for blog in blogs
        a.module-item(href=`/blog/${blog.key}.html`)
          .item-context
            .item-article
              h2 #{blog.title}
              .item-txt #{blog.summary}
              .item-footer
                span.cate
                  i.saidfont.icon-category #{blog.category.name}
                time.date 
                  i.saidfont.icon-rili #{blog.info.localDate}
                span.pv 
                  i.saidfont.icon-yonghu #{blog.info.pv}
